@model FootballShopModel.Models.Account
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Đăng ký tài khoản</title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Assets/Admin/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5 col-6 mx-auto">
            <div class="card-body p-0">

                <div class="p-5">
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Đăng ký tài khoản</h1>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.ValidationSummary(true, null, new { @class = "card bg-danger text-white shadow p-3 mb-2" })
                        <form class="user" action="/Register" method="POST">
                            <div class="form-group">
                                @*<input type="text" class="form-control form-control-user" id="register-name"
                    placeholder="Họ tên" required>*@
                                @Html.TextBoxFor(model => model.name, new { @name = "name", @class = "form-control form-control-user", @type = "text", @placeholder = "Họ tên", @required = "required" })
                            </div>
                            <div class="form-group">
                                @*<input type="email" class="form-control form-control-user" id="register-email"
                    placeholder="Email" required>*@
                                @Html.TextBoxFor(model => model.email, new { @name = "email", @class = "form-control form-control-user", @type = "email", @placeholder = "Email", @required = "required" })
                            </div>
                            <div class="form-group">
                                @*<input type="number" class="form-control form-control-user" id="register-phone"
                    placeholder="Số điện thoại" required>*@
                                @Html.TextBoxFor(model => model.phone, new { @name = "phone", @class = "form-control form-control-user", @type = "text", @placeholder = "Số điện thoại", @required = "required" })
                            </div>
                            <div class="form-group">
                                @*<input type="text" class="form-control form-control-user" id="register-address"
                    placeholder="Địa chỉ" required>*@
                                @Html.TextBoxFor(model => model.address, new { @name = "address", @class = "form-control form-control-user", @type = "text", @placeholder = "Địa chỉ", @required = "required" })
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    @*<input type="password" class="form-control form-control-user"
                        id="register-password" placeholder="Mật khẩu">*@
                                    @Html.TextBoxFor(model => model.password, new { @name = "password", @class = "form-control form-control-user", @type = "password", @placeholder = "Mật khẩu", @required = "required" })
                                </div>
                                <div class="col-sm-6">
                                    @*<input type="password" class="form-control form-control-user"
                        id="register-comfirm-password" placeholder="Nhập lại mật khẩu">*@
                                    @Html.TextBoxFor(model => model.confirmPassword, new { @name = "confirmPassword", @class = "form-control form-control-user", @type = "password", @placeholder = "Nhập lại mật khẩu", @required = "required" })
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary btn-user btn-block">
                                Đăng ký
                            </button>
                        </form>
                    }

                    <hr>
                    <div class="text-center">
                        <a class="" href="/Login">Bạn đã có tài khoản? Đăng nhập ngay</a>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/Admin/js/sb-admin-2.min.js"></script>

</body>

</html>