@model FootballShopModel.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Create", "Category", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form px-4">
    <button class="btn btn-primary mb-4">
        <a href="@Url.Action("Index")" class="text-white text-decoration-none">Quay lại</a>
    </button>
    <h2>TẠO MỘT DANH MỤC MỚI</h2>
    <div class="row">
        <div class="col-6">
            @Html.ValidationSummary(true, "", new { @class = "card bg-danger text-white shadow p-3 mb-4" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label col-md-6">Name</label>
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group custom-file col-6">
            <label for="imageUpload">Chọn hình ảnh</label>
            <input class="form-control form-control-user" type="file" name="imageUpload" id="imageUpload" accept="image/*" />
        </div>
    </div>

    <div id="add-modal-alert"></div>
    <button type="submit" class="btn btn-primary">
        Tạo mới
    </button>
</div>
}
