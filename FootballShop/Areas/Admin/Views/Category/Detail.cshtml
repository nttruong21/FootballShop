@model FootballShopModel.Models.Category

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="px-4">
    <button class="btn btn-primary mb-4">
        <a href="@Url.Action("Index")" class="text-white text-decoration-none">Quay lại danh sách danh mục</a>
    </button>
    <h2>THÔNG TIN CHI THIẾT DANH MỤC</h2>
    <div class="row">
        <div class="form-group col-6">
            @Html.LabelFor(model => model.name, htmlAttributes: new { @class = "control-label col-md-2" })
            @Html.TextBoxFor(model => model.name, new { @value = Model.name, @name = "name", @class = "form-control form-control-user", @type = "text", @placeholder = "Nhập họ tên", @disabled = "disabled" })
        </div>
    </div>
</div>
