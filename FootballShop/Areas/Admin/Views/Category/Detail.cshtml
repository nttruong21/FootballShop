@model FootballShopModel.Models.Category

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="px-4">
    <button class="btn btn-primary mb-4">
        <a href="@Url.Action("Index")" class="text-white text-decoration-none">Quay lại</a>
    </button>
    <h2>THÔNG TIN CHI TIẾT DANH MỤC</h2>
    <div class="row">
        <div class="form-group col-6">
            <img src="~/Assets/Admin/img/category/@Model.image" alt="" width="100%" height="100%" />
        </div>
        <div class="form-group col-6">
            <label class="control-label col-md-6">Name</label>
            @Html.TextBoxFor(model => model.name, new { @value = Model.name, @name = "name", @class = "form-control form-control-user", @type = "text", @placeholder = "Nhập họ tên", @disabled = "disabled" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label class="control-label col-md-6">Slug</label>
            @Html.TextBoxFor(model => model.slug, new { @value = Model.slug, @name = "slug", @class = "form-control form-control-user", @type = "text", @placeholder = "Nhập họ tên", @disabled = "disabled" })
        </div>
        <div class="form-group col-6">
            <label class="control-label">Uppercase Name</label>
            @Html.TextBoxFor(model => model.uppercaseName, new { @value = Model.uppercaseName, @name = "uppercaseName", @class = "form-control form-control-user", @type = "text", @placeholder = "Nhập họ tên", @disabled = "disabled" })
        </div>
    </div>
</div>
