
@{
    ViewBag.Title = "Danh sách đơn hàng đã bị hủy";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h2 class="h3 mb-2 text-gray-800">ĐƠN HÀNG ĐÃ HỦY</h2>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Họ tên</th>
                            <th>Địa chỉ</th>
                            <th>Số điện thoại</th>
                            <th>Tồng tiền</th>
                            <th>Trạng thái</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.recipientName</td>
                                <td>@item.recipientAddress</td>
                                <td>@item.recipientPhone</td>
                                <td>@item.totalPrice</td>
                                <td><span class="badge badge-danger p-2">Đã hủy</span></td>
                                <td>
                                    <div class="" role="group">
                                        <button id="btnGroupDrop1" class="border-0" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <i class="fa-solid fa-ellipsis-vertical"></i>
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="btnGroupDrop1">
                                            <a class="dropdown-item" href="@Url.Action("BillDetail", "Bill", new { billId = item.id })">Chi tiết</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


