@model FootballShopModel.Models.Product

@{
    ViewBag.Title = "Detail";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="form px-4">
    <button class="btn btn-primary mb-4">
        <a href="@Url.Action("Index")" class="text-white text-decoration-none">Quay lại danh sách sản phẩm</a>
    </button>
    <h2>CHI TIẾT SẢN PHẨM</h2>
    <div class="row">
        <div class="form-group col-6">
            <img src="~/Upload/@Model.image" alt="" width="100%" height="100%"/>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="name">Tên sản phẩm</label>
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "text", @disabled = "disabled" } })
        </div>
        <div class="form-group col-6">
            <label for="categoryId">Danh mục</label>
            @Html.DropDownListFor(model => model.categoryId, (IEnumerable<SelectListItem>)ViewBag.MenuCategories, new { @name = "categoryId", @class = "form-control form-control-user", @disabled = "disabled" })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="brand">Thương hiệu</label>
            @Html.EditorFor(model => model.brand, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "text", @disabled = "disabled" } })
        </div>
        <div class="form-group col-6">
            <label for="price">Đơn giá</label>
            @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "number", @disabled = "disabled" } })
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="discount">Khuyến mãi</label>
            @Html.EditorFor(model => model.discount, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "number", @value = "0", @disabled = "disabled" } })
          
        </div>
        <div class="form-group col-6">
            <label for="video">Video</label>
            @Html.EditorFor(model => model.video, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "text", @disabled = "disabled" } })
    
        </div>

    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="size">Kích thước</label>
            @Html.EditorFor(model => model.size, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "text", @disabled = "disabled" } })
            
        </div>
        <div class="form-group col-6">
            <label for="quantity">Số lượng</label>
            @Html.EditorFor(model => model.quantity, new { htmlAttributes = new { @class = "form-control form-control-user", @type = "number", @disabled = "disabled" } })
           
        </div>
    </div>
    <div class="row">
        <div class="form-group col-6">
            <label for="infor">Thông tin</label>
            @Html.TextAreaFor(model => model.infor, new { @class = "form-control form-control-user", @type = "text", @rows = 4, @disabled = "disabled" })
         
        </div>

    </div>
</div>
